# ~/embedded-lab/.env.example

# ── LiteLLM Proxy 설정 (GitHub Copilot OAuth) ──
OPENAI_API_BASE=http://localhost:4000
OPENAI_API_KEY=dummy
LITELLM_PORT=4000

# ── Gemini CLI 설정 (Senior Consultant) ──
GOOGLE_API_KEY=your_gemini_api_key_here

# ── 알림 ──
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ── GitHub MCP ──
GITHUB_TOKEN=your_ghp_token

# ── n8n 워크플로우 자동화 ──
N8N_API_URL=http://localhost:5678/api/v1   # n8n 로컬 서버 기본 포트
N8N_API_KEY=your_n8n_api_key_here         # n8n Settings → API → Create API Key

# ── Context7 (라이브러리 공식 문서) ──
# 별도 API 키 불필요 — npx 실행만으로 동작

# ── Hyperbrowser (고급 브라우저 자동화) ──
HYPERBROWSER_API_KEY=your_hyperbrowser_api_key  # https://hyperbrowser.ai

# ── Brave Search (웹 검색) ──
BRAVE_API_KEY=your_brave_api_key_here     # https://brave.com/search/api/

# ── Memory MCP (영구 기억) ──
MEMORY_FILE_PATH=/home/ubuntu/embedded-lab/.memory/knowledge.json

# ── ARM MCP (ARM 개발 도구) ──
ARM_API_KEY=your_arm_api_key_here         # https://developer.arm.com

# ── HWPX MCP (한글 문서 편집) ──
# 별도 API 키 불필요 — uvx hwpx-mcp-server 실행만으로 동작
# uv 설치: curl -LsSf https://astral.sh/uv/install.sh | sh
HWPX_MCP_PAGING_PARA_LIMIT=200           # read_text 최대 단락 수 (기본 200)
HWPX_MCP_AUTOBACKUP=1                    # 저장 시 .bak 자동 백업 (기본 0)
HWPX_MCP_HARDENING=1                     # 3단계 편집 파이프라인 활성화 (기본 0)

# ── 로컬 설정 (Ubuntu 24.04 기준 예시) ──
SERIAL_PORT=/dev/ttyUSB0
BAUD_RATE=115200
IDF_PATH=/opt/esp-idf
RENODE_PATH=/usr/bin/renode
PROJECT_PATH=/home/ubuntu/embedded-lab/firmware
